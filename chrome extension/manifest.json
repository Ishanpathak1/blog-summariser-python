{
    "manifest_version": 3,
    "name": "Article Summarizer",
    "version": "1.0",
    "description": "Summarize articles using a backend service.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html"
    },
   
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  